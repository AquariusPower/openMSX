    <type>MSX-Midi</type>
  </device>

  <device id="cpu">
    <type>CPU</type>
  </device>

  <device id="Printer Port">
    <type>PrinterPort</type>
  </device>

<!-- This is a settings-type of configuration. See settings.xml -->
  <config id="Mixer">
    <parameter name="frequency">22050</parameter>
    <parameter name="samples">512</parameter>
  </config>

  <config id="CassettePort">
  </config>

  <device id="Empty SCC Cartridge">
    <type>Rom</type>
    <slotted>
      <ps>1</ps>
      <ss>0</ss>
      <page>1</page>
    </slotted>
    <slotted>
      <ps>1</ps>
      <ss>0</ss>
      <page>2</page>
    </slotted>
    <parameter name="filesize">131072</parameter>
    <parameter name="volume">11500</parameter>
    <parameter name="mappertype">SCC</parameter>
    <parameter name="loadsram">true</parameter>
    <parameter name="savesram">true</parameter>
    <parameter name="sramname">GAME.SRAM</parameter>
  </device>
  
  <config id="KeyEventInserter">
    <parameter name="keys">load"cas:"&#x0D;run&#x0D;</parameter>
  </config>

  <config id="Console">
    <parameter name="font">ConsoleFont.png</parameter>
    <parameter name="background">ConsoleBackground.png</parameter>
    <parameter name="columns">50</parameter>
    <parameter name="rows">7</parameter>
    <parameter name="placement">bottom</parameter>
  </config>

  <device id="Sunrise IDE">
    <type>SunriseIDE</type>
    <slotted> <ps>3</ps> <ss>2</ss> <page>0</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>2</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>3</page> </slotted>
    <parameter name="filename">IDE210.ROM</parameter>
    <parameter name="master">myHD</parameter>
<!--<parameter name="slave">myCDROM</parameter>-->
  </device>

  <config id="myHD">
    <type>IDEHD</type>
    <parameter name="filename">hd.dsk</parameter>
  </config>
  
  <device id="Kanji ROM 12x12">
    <type>Kanji12</type>
    <parameter name="filename">KANJI12.ROM</parameter>
  </device>

