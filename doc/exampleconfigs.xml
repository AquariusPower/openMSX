  <device id="Real time clock">
    <type>RTC</type>
    <parameter name="mode">EmuTime</parameter>
    <parameter name="loadsram">true</parameter>
    <parameter name="savesram">true</parameter>
    <parameter name="sramname">RTC.SAVE</parameter>
  </device>

<!-- This is a settings-type of configuration. See settings.xml -->
  <config id="RealTime">
    <parameter name="max_catch_up_time">2000</parameter>
    <parameter name="max_catch_up_factor">105</parameter>
  </config>

  <device id="SCC+ Cartridge">
    <type>SCCPlusCart</type>
    <slotted> <ps>1</ps> <ss>0</ss> <page>1</page> </slotted>
    <slotted> <ps>1</ps> <ss>0</ss> <page>2</page> </slotted>
    <parameter name="readromfile">false</parameter>
    <parameter name="filename">NEMESIS2.ROM</parameter>
    <parameter name="volume">13000</parameter>
    <!-- possible subtypes "Snatcher" "SD-Snatcher" "mirrored" "expanded" -->
    <parameter name="subtype">expanded</parameter>
  </device>

  <device id="Penguin Adventure Cartridge">
    <type>Rom</type>
    <slotted>
      <ps>1</ps>
      <ss>0</ss>
      <page>1</page>
    </slotted>
    <slotted>
      <ps>1</ps>
      <ss>0</ss>
      <page>2</page>
    </slotted>
    <parameter name="filename">PENGUIN.ROM</parameter>
    <parameter name="loadsram">true</parameter>
    <parameter name="savesram">true</parameter>
    <parameter name="sramname">GAME.SRAM</parameter>
  </device>
