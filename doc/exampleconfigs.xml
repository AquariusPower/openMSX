<!DOCTYPE msxconfig SYSTEM "msxconfig.dtd">
<msxconfig>

<!-- Defines which slots are external ones, i.e. can have carts put into them-->
  <config id="ExternalSlots">
    <parameter name="slota">1-0</parameter>
    <parameter name="slotb">2-0</parameter>
  </config>

<!-- slot configuration -->
  <config id="MotherBoard">
    <parameter name="0" class="subslotted">false</parameter>
    <parameter name="1" class="subslotted">false</parameter>
    <parameter name="2" class="subslotted">false</parameter>
    <parameter name="3" class="subslotted">true</parameter>
  </config>
  
<!-- This is very likely to change soon -->
  <config id="SearchPaths">
    <parameter class="disk">disks</parameter>
    <parameter class="rom">roms</parameter>
    <parameter class="rom">cfg</parameter>
    <parameter class="tape">tapes</parameter>
    <parameter class="config">cfg</parameter>
    <parameter class="state">cfg</parameter>
  </config>

  <config id="FileTypes">
    <type>FileTypes</type>
    <parameter class="diskimages">dsk</parameter>
    <parameter class="diskimages">di1</parameter>
    <parameter class="diskimages">di2</parameter>
    <parameter class="diskimages">xsa</parameter>
    <parameter class="cassetteimages">wav</parameter>
    <parameter class="cassetteimages">cas</parameter>
    <parameter class="romimages">rom</parameter>
    <parameter class="romimages">ri</parameter>
   </config>


<!-- Console commands that should be automatically executed at boot -->
  <config id="AutoCommands">
    <parameter>plug joyporta mouse</parameter>
    <parameter>plug joyportb joystick1</parameter>
  </config>
  
<!-- Example RAM configuration -->
  <device id="myram1">
    <type>RAM</type>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>0</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>1</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>2</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>3</page>
    </slotted>
    <parameter name="slow_drain_on_reset">true</parameter>
    <parameter name="size">8</parameter>
    <parameter name="base">56</parameter>
  </device>

  <device id="biosrom">
    <type>Rom</type>
    <slotted>
      <page>0</page>
      <ps>0</ps>
      <ss>0</ss>
    </slotted>
  </device>
