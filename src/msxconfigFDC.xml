<!DOCTYPE msxconfig SYSTEM "msxconfig.dtd">
<msxconfig>

  <config id="MotherBoard">
    <type>MotherBoard</type>
    <parameter name="0" class="subslotted">false</parameter>
    <parameter name="1" class="subslotted">false</parameter>
    <parameter name="2" class="subslotted">false</parameter>
    <parameter name="3" class="subslotted">true</parameter>
  </config>

  <!--
  <device id="PrinterPort">
    <type>PrinterPort</type>
    <parameter name="logfile">printport.log</parameter>
  </device>
  -->

  <device id="MapperIO">
    <type>MapperIO</type>
    <parameter name="type">Philips</parameter>
  </device>

  <device id="Main RAM">
    <type>MemoryMapper</type>
    <slotted>
      <ps>3</ps>
      <ss>2</ss>
      <page>0</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>2</ss>
      <page>1</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>2</ss>
      <page>2</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>2</ss>
      <page>3</page>
    </slotted>
    <parameter name="slow_drain_on_reset">false</parameter>
    <parameter name="size">128</parameter>
  </device>

  <device id="biosrom">
    <type>Rom</type>
    <slotted>
      <ps>0</ps>
      <ss>0</ss>
      <page>0</page>
    </slotted>
    <parameter name="filename">cfg/nms8250-bios.rom</parameter>
  </device>

  <device id="basicrom">
    <type>Rom</type>
    <slotted>
      <ps>0</ps>
      <ss>0</ss>
      <page>1</page>
    </slotted>
    <parameter name="filename">cfg/nms8250-basic.rom</parameter>
  </device>

  <device id="subrom">
    <type>Rom</type>
    <slotted>
      <ps>3</ps>
      <ss>0</ss>
      <page>0</page>
    </slotted>
    <parameter name="filename">cfg/nms8250-sub.rom</parameter>
  </device>

