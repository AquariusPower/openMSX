  <device id="MSX Music">
    <type>Music</type>
    <slotted>
      <ps>2</ps>
      <ss>0</ss>
      <page>1</page>
    </slotted>
    <parameter name="filename">MUSIC.ROM</parameter>
    <parameter name="skip_headerbytes">0</parameter>
  </device>
-->
 
  <device id="cpu">
    <type>CPU</type>
  </device>
  
</msxconfig>



