    <type>PrinterLogger</type>
    <parameter name="filename">printer.log</parameter>
  </device>

  <device id="Empty SCC Cartridge">
    <type>GameCartridge</type>
    <slotted>
      <ps>1</ps>
      <ss>0</ss>
