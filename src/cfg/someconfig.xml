<!DOCTYPE msxconfig SYSTEM "msxconfig.dtd">
<msxconfig>
  
  <config id="MotherBoard">
    <type>MotherBoard</type>
    <parameter name="0" class="subslotted">false</parameter>
    <parameter name="1" class="subslotted">false</parameter>
    <parameter name="2" class="subslotted">false</parameter>
    <parameter name="3" class="subslotted">true</parameter>
  </config>
  
  <config id="rompath">
    <type>rompath</type>
    <parameter name="separator">/</parameter>
    <parameter name="1" class="path">ROMS</parameter>
    <parameter name="2" class="path">TAPES</parameter>
  </config>

  <config id="AutoCommands">
    <parameter>plug joyporta mouse</parameter>
    <parameter>plug joyportb joystick1</parameter>
  </config>
  
  <device id="myram1">
    <type>Simple64KB</type>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>0</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>1</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>2</page>
    </slotted>
    <slotted>
      <ps>3</ps>
      <ss>3</ss>
      <page>3</page>
    </slotted>
    <parameter name="slow_drain_on_reset">true</parameter>
  </device>
  <device id="biosrom">
    <type>Rom16KB</type>
    <slotted>
      <page>0</page>
      <ps>0</ps>
      <ss>0</ss>
    </slotted>
  </device>
