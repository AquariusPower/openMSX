<?xml version="1.0"?>
<!DOCTYPE msxconfig SYSTEM "msxconfig.dtd">
<msxconfig>

<!-- 
  This file contains the settings or user preferences. 
-->

 <!-- The machine that is loaded if no machine is specified -->
  <config id="DefaultMachine">
    <parameter name="machine">cbios-msx2</parameter>
  </config>

 <!-- renderer settings: determines how openMSX outputs graphics -->
  <config id="renderer">
    <type>SDLHi</type>
  <!-- 
    <type>SDLGL</type> 
  -->
    <parameter name="full_screen">false</parameter>
  </config>

 <!-- Settings for the RealTime system that keeps your emulated MSX running
      in the right pace -->
  <config id="RealTime">
    <type>RealTime</type>
    <parameter name="max_catch_up_time">2000</parameter>
    <parameter name="max_catch_up_factor">105</parameter>
  </config>

 <!-- Audio mixer settings -->
  <config id="Mixer">
    <type>Mixer</type>
  <!-- Sample frequency, 22kHz should be enough for normal MSX, use 44.1kHz for
       Moonsound -->
    <parameter name="frequency">22050</parameter>
  <!-- Use more samples when FM sound quality is bad, e.g.
    <parameter name="samples">1024</parameter>
   --> 
    <parameter name="samples">512</parameter>
  </config>

 <!-- Console font file, decorations and other settings -->
  <config id="Console">
    <type>Console</type>
    <parameter name="font">skins/ConsoleFont.png</parameter>
    <parameter name="background">skins/ConsoleBackground.png</parameter>
    <parameter name="columns">100</parameter>
    <parameter name="rows">14</parameter>
    <parameter name="placement">bottom</parameter>
    <parameter name="historysize">100</parameter>
    <parameter name="removedoubles">true</parameter>
  </config>

<!-- The debugger console is disabled for now, since it is not really 
     implemented yet...
  <config id="Debugger">
    <type>Debugger</type>
    <parameter name="font">skins/ConsoleFontRave.png</parameter>
    <parameter name="background">skins/ConsoleBackground2.png</parameter>
    <parameter name="columns">100</parameter>
    <parameter name="rows">20</parameter>
    <parameter name="placement">top</parameter>
  </config>	
-->

 <!-- Commands that should be executed automatically after boot -->
  <config id="AutoCommands">
    <parameter>bind print screenshot</parameter>
    <parameter>bind pause toggle pause</parameter>
    <parameter>bind F9 toggle throttle</parameter>
    <parameter>bind F10 toggle console</parameter>
    <parameter>bind F11 toggle mute</parameter>
    <parameter>bind F12 toggle fullscreen</parameter>
    <!--<parameter>set frontswitch off</parameter>
        <parameter>set accuracy pixel</parameter> 
        <parameter>set cassetteplayer_volume 0</parameter> -->
    <!--<parameter>bind F9    "set throttle off"</parameter>
        <parameter>bind F9,up "set throttle on"</parameter>-->
    <!--<parameter>unplug joyporta</parameter>
        <parameter>plug joyportb mouse</parameter>
        <parameter>plug cassetteport cassetteplayer</parameter>-->
  </config>

 <!-- Directories that are searched in, when looking for files mentioned
      on the command line or Console -->
  <config id="UserDirectories">
    <parameter>~/openMSX/roms</parameter>
    <parameter>~/openMSX/disks</parameter>
    <parameter>~/openMSX/tapes</parameter>
  </config>

 <!-- File extensions that should be bound to certain file types -->
  <config id="FileTypes">
    <type>FileTypes</type>
    <parameter class="diskimages">dsk</parameter>
    <parameter class="diskimages">di1</parameter>
    <parameter class="diskimages">di2</parameter>
    <parameter class="diskimages">xsa</parameter>
    <parameter class="rawtapeimages">wav</parameter>
    <parameter class="cassetteimages">cas</parameter>
    <parameter class="romimages">rom</parameter>
    <parameter class="romimages">ri</parameter>
   </config>

<!-- These are the keybindings for the keyjoystick, a pluggable that makes you
     able to use the keyboard in stead of a joystick in joystick-only soft -->
   <config id="KeyJoystick">
     <type>KeyJoystick</type>
     <parameter name="upkey">UP</parameter>
     <parameter name="rightkey">RIGHT</parameter>
     <parameter name="downkey">DOWN</parameter>
     <parameter name="leftkey">LEFT</parameter>
     <parameter name="buttonakey">SPACE</parameter>
     <parameter name="buttonbkey">M</parameter>
   </config>

 <!-- Keymap definition file -->
  <config id="KeyMap">
   <!--
    <parameter name="filename">keymaps/keymap.default</parameter>
   -->
  </config>

</msxconfig>


