<?xml version="1.0"?>
<!-- $Id$ -->
<!DOCTYPE msxconfig SYSTEM "msxconfig.dtd">
<msxconfig>

  <config id="ExternalSlots">
    <parameter name="slota">1-0</parameter>
    <parameter name="slotb">2-0</parameter>
  </config>

  <config id="MotherBoard">
    <parameter name="0" class="subslotted">true</parameter>
    <parameter name="1" class="subslotted">false</parameter>
    <parameter name="2" class="subslotted">false</parameter>
    <parameter name="3" class="subslotted">true</parameter>
  </config>

  <config id="RenShaTurbo">
     <parameter name="min_ints">47</parameter>
     <parameter name="max_ints">221</parameter>
  </config>

  <config id="MapperType">
    <parameter name="type">TurboR</parameter>
  </config>
  
  <!-- this must come before other internal roms -->
  <device id="Firmware">
    <type>Rom</type>
    <slotted> <ps>3</ps> <ss>3</ss> <page>0</page> </slotted>
    <slotted> <ps>3</ps> <ss>3</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>3</ss> <page>2</page> </slotted>
    <slotted> <ps>3</ps> <ss>3</ss> <page>3</page> </slotted>
    <parameter name="filename">roms/fs-a1gt_firmware.rom</parameter>
    <parameter name="mappertype">PANASONIC</parameter>
    <parameter name="sramsize">32</parameter>
    <parameter name="sram-mirrored">false</parameter>
    <parameter name="sramname">fs-a1gt.sram</parameter>
  </device>

  <device id="MSX BIOS/BASIC ROM">
    <type>Rom</type>
    <slotted> <ps>0</ps> <ss>0</ss> <page>0</page> </slotted>
    <slotted> <ps>0</ps> <ss>0</ss> <page>1</page> </slotted>
    <parameter name="firstblock">40</parameter>
    <parameter name="lastblock">43</parameter>
  </device>
  
  <device id="MSX Music">
    <type>Music</type>
    <slotted> <ps>0</ps> <ss>2</ss> <page>1</page> </slotted>
    <parameter name="firstblock">62</parameter>
    <parameter name="lastblock">63</parameter>
    <parameter name="volume">9000</parameter>   
    <parameter name="mode">mono</parameter>
  </device>
  
  <device id="MSX Opening ROM">
    <type>Rom</type>
    <slotted> <ps>0</ps> <ss>3</ss> <page>1</page> </slotted>
    <parameter name="firstblock">36</parameter>
    <parameter name="lastblock">37</parameter>
  </device>

  <device id="Main RAM">
    <type>PanasonicRam</type>
    <slotted> <ps>3</ps> <ss>0</ss> <page>0</page> </slotted>
    <slotted> <ps>3</ps> <ss>0</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>0</ss> <page>2</page> </slotted>
    <slotted> <ps>3</ps> <ss>0</ss> <page>3</page> </slotted>
    <parameter name="slow_drain_on_reset">false</parameter>
    <parameter name="size">512</parameter>
  </device>

  <device id="MSX Sub ROM">
    <type>Rom</type>
    <slotted> <ps>3</ps> <ss>1</ss> <page>0</page> </slotted>
    <parameter name="firstblock">56</parameter>
    <parameter name="lastblock">57</parameter>
  </device>

  <device id="MSX Kanji Driver with BASIC">
    <type>Rom</type>
    <slotted> <ps>3</ps> <ss>1</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>1</ss> <page>2</page> </slotted>
    <parameter name="firstblock">58</parameter>
    <parameter name="lastblock">61</parameter>
  </device>
  
  <device id="Memory Mapped FDC">
    <type>FDC</type>
    <slotted> <ps>3</ps> <ss>2</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>2</page> </slotted>
    <parameter name="firstblock">48</parameter>
    <parameter name="lastblock">55</parameter>
    <parameter name="type">TC8566AF</parameter>
    <parameter name="drivename1">diska</parameter>
  </device>

  <device id="Kanji ROM">
    <type>Kanji</type>
    <parameter name="filename">roms/fs-a1gt_kanjifont.rom</parameter>
  </device>

  <device id="S1990">
    <type>S1990</type>
  </device>

  <device id="ppi">
    <type>PPI</type>
    <parameter name="volume">16000</parameter>
    <parameter name="key_ghosting">true</parameter>
  </device>

  <device id="VDP">
    <type>VDP</type>
    <parameter name="version">V9958</parameter>
    <parameter name="vram">128</parameter>
  </device>

  <device id="PSG">
    <type>PSG</type>
    <parameter name="volume">21000</parameter>
  </device>

  <device id="Real time clock">
    <type>RTC</type>
    <parameter name="mode">EmuTime</parameter>
    <parameter name="sramname">fs-a1gt.cmos</parameter>
  </device>

  <device id="cpu">
    <type>CPU</type>
  </device>

  <device id="Printer Port">
    <type>PrinterPort</type>
  </device>
  
  <device id="Turbo-R timer">
    <type>E6Timer</type>
  </device>
  
  <device id="F4Device">
    <type>F4Device</type>
    <parameter name="inverted">false</parameter>
  </device>

  <device id="TurboRLeds">
    <type>TurboRLeds</type>
  </device>

  <device id="TurboRPause">
    <type>TurboRPause</type>
  </device>

  <device id="PCM">
    <type>TurboRPCM</type>
    <parameter name="volume">21000</parameter>
  </device>

  <device id="MSX-Midi">
    <type>MSX-Midi</type>
  </device>
</msxconfig>
