<?xml version="1.0"?>
<!-- $Id$ -->
<!DOCTYPE msxconfig SYSTEM "msxconfig.dtd">
<msxconfig>

  <config id="ExternalSlots">
    <slota>1-0</slota>
    <slotb>2-0</slotb>
  </config>

  <config id="MotherBoard">
    <parameter name="0" class="subslotted">true</parameter>
    <parameter name="1" class="subslotted">false</parameter>
    <parameter name="2" class="subslotted">false</parameter>
    <parameter name="3" class="subslotted">true</parameter>
  </config>

  <config id="RenShaTurbo">
     <min_ints>47</min_ints>
     <max_ints>221</max_ints>
  </config>

  <config id="MapperType">
    <type>TurboR</type>
  </config>
  
  <!-- this must come before other internal roms -->
  <device id="Firmware">
    <type>Rom</type>
    <slotted> <ps>3</ps> <ss>3</ss> <page>0</page> </slotted>
    <slotted> <ps>3</ps> <ss>3</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>3</ss> <page>2</page> </slotted>
    <slotted> <ps>3</ps> <ss>3</ss> <page>3</page> </slotted>
    <filename>roms/fs-a1gt_firmware.rom</filename>
    <mappertype>PANASONIC</mappertype>
    <sramsize>32</sramsize>
    <sram-mirrored>false</sram-mirrored>
    <sramname>fs-a1gt.sram</sramname>
  </device>

  <device id="MSX BIOS with BASIC ROM">
    <type>Rom</type>
    <slotted> <ps>0</ps> <ss>0</ss> <page>0</page> </slotted>
    <slotted> <ps>0</ps> <ss>0</ss> <page>1</page> </slotted>
    <firstblock>40</firstblock>
    <lastblock>43</lastblock>
  </device>
  
  <device id="MSX Music">
    <type>Music</type>
    <slotted> <ps>0</ps> <ss>2</ss> <page>1</page> </slotted>
    <io base="0x7C" num="2" type="O"/>
    <firstblock>62</firstblock>
    <lastblock>63</lastblock>
    <volume>9000</volume>   
    <mode>mono</mode>
  </device>
  
  <device id="MSX Opening ROM">
    <type>Rom</type>
    <slotted> <ps>0</ps> <ss>3</ss> <page>1</page> </slotted>
    <firstblock>36</firstblock>
    <lastblock>37</lastblock>
  </device>

  <device id="Main RAM">
    <type>PanasonicRam</type>
    <slotted> <ps>3</ps> <ss>0</ss> <page>0</page> </slotted>
    <slotted> <ps>3</ps> <ss>0</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>0</ss> <page>2</page> </slotted>
    <slotted> <ps>3</ps> <ss>0</ss> <page>3</page> </slotted>
    <slow_drain_on_reset>false</slow_drain_on_reset>
    <size>512</size>
  </device>

  <device id="MSX Sub ROM">
    <type>Rom</type>
    <slotted> <ps>3</ps> <ss>1</ss> <page>0</page> </slotted>
    <firstblock>56</firstblock>
    <lastblock>57</lastblock>
  </device>

  <device id="MSX Kanji Driver with BASIC">
    <type>Rom</type>
    <slotted> <ps>3</ps> <ss>1</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>1</ss> <page>2</page> </slotted>
    <firstblock>58</firstblock>
    <lastblock>61</lastblock>
  </device>
  
  <device id="Memory Mapped FDC">
    <type>FDC</type>
    <slotted> <ps>3</ps> <ss>2</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>2</page> </slotted>
    <firstblock>48</firstblock>
    <lastblock>55</lastblock>
    <fdc_type>TC8566AF</fdc_type>
    <drivename1>diska</drivename1>
  </device>

  <device id="Kanji ROM">
    <type>Kanji</type>
    <io base="0xD8" num="4"/>
    <filename>roms/fs-a1gt_kanjifont.rom</filename>
  </device>

  <device id="S1990">
    <type>S1990</type>
    <io base="0xE4" num="2"/>
  </device>

  <device id="ppi">
    <type>PPI</type>
    <io base="0xA8" num="4"/>
    <volume>16000</volume>
    <key_ghosting>true</key_ghosting>
  </device>

  <device id="VDP">
    <type>VDP</type>
    <io base="0x98" num="4"/>
    <version>V9958</version>
    <vram>128</vram>
  </device>

  <device id="psg">
    <type>PSG</type>
    <io base="0xA0" num="2" type="O"/>
    <io base="0xA2" num="1" type="I"/>
    <volume>21000</volume>
    <keyboardlayout>JIS</keyboardlayout>
  </device>

  <device id="Real time clock">
    <type>RTC</type>
    <io base="0xB4" num="2"/>
    <mode>EmuTime</mode>
    <sramname>fs-a1gt.cmos</sramname>
  </device>

  <device id="Printer Port">
    <type>PrinterPort</type>
    <io base="0x90" num="2"/>
  </device>
  
  <device id="Turbo-R timer">
    <type>E6Timer</type>
    <io base="0xE6" num="2"/>
  </device>
  
  <device id="F4Device">
    <type>F4Device</type>
    <io base="0xF4" num="1"/>
    <inverted>false</inverted>
  </device>

  <device id="TurboRLeds">
    <type>TurboRLeds</type>
    <io base="0xA7" num="1" type="O"/>
  </device>

  <device id="TurboRPause">
    <type>TurboRPause</type>
    <io base="0xA7" num="1" type="I"/>
  </device>

  <device id="PCM">
    <type>TurboRPCM</type>
    <io base="0xA4" num="2"/>
    <volume>21000</volume>
  </device>

  <device id="MSX-Midi">
    <type>MSX-Midi</type>
    <io base="0xE8" num="8"/>
  </device>
</msxconfig>
