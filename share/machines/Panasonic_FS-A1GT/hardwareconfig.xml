<?xml version="1.0" ?>
<!-- $Id$ --><!DOCTYPE msxconfig
  SYSTEM 'msxconfig.dtd'>
<msxconfig>

  <ExternalSlots>
    <slota>1-0</slota>
    <slotb>2-0</slotb>
  </ExternalSlots>

  <MotherBoard>
    <slot expanded="true" num="0"/>
    <slot expanded="false" num="1"/>
    <slot expanded="false" num="2"/>
    <slot expanded="true" num="3"/>
  </MotherBoard>

  <RenShaTurbo>
     <min_ints>47</min_ints>
     <max_ints>221</max_ints>
  </RenShaTurbo>

  <MapperType>TurboR</MapperType>
  
  <devices>

    <!-- this must come before other internal roms -->
    <ROM id="Firmware">
      <slotted> <ps>3</ps> <ss>3</ss> <page>0</page> </slotted>
      <slotted> <ps>3</ps> <ss>3</ss> <page>1</page> </slotted>
      <slotted> <ps>3</ps> <ss>3</ss> <page>2</page> </slotted>
      <slotted> <ps>3</ps> <ss>3</ss> <page>3</page> </slotted>
      <rom>
        <filename>roms/fs-a1gt_firmware.rom</filename>
        <mappertype>PANASONIC</mappertype>
      </rom>
      <sramsize>32</sramsize>
      <sram-mirrored>false</sram-mirrored>
      <sramname>fs-a1gt.sram</sramname>
    </ROM>

    <ROM id="MSX BIOS with BASIC ROM">
      <slotted> <ps>0</ps> <ss>0</ss> <page>0</page> </slotted>
      <slotted> <ps>0</ps> <ss>0</ss> <page>1</page> </slotted>
      <rom>
        <firstblock>40</firstblock>
        <lastblock>43</lastblock>
      </rom>
    </ROM>
    
    <MSX-MUSIC id="MSX Music">
      <slotted> <ps>0</ps> <ss>2</ss> <page>1</page> </slotted>
      <io base="0x7C" num="2" type="O"/>
      <rom>
        <firstblock>62</firstblock>
        <lastblock>63</lastblock>
      </rom>
      <volume>9000</volume>   
      <mode>mono</mode>
    </MSX-MUSIC>
    
    <ROM id="MSX Opening ROM">
      <slotted> <ps>0</ps> <ss>3</ss> <page>1</page> </slotted>
      <rom>
        <firstblock>36</firstblock>
        <lastblock>37</lastblock>
      </rom>
    </ROM>

    <PanasonicRAM id="Main RAM">
      <slotted> <ps>3</ps> <ss>0</ss> <page>0</page> </slotted>
      <slotted> <ps>3</ps> <ss>0</ss> <page>1</page> </slotted>
      <slotted> <ps>3</ps> <ss>0</ss> <page>2</page> </slotted>
      <slotted> <ps>3</ps> <ss>0</ss> <page>3</page> </slotted>
      <slow_drain_on_reset>false</slow_drain_on_reset>
      <size>512</size>
    </PanasonicRAM>

    <ROM id="MSX Sub ROM">
      <slotted> <ps>3</ps> <ss>1</ss> <page>0</page> </slotted>
      <rom>
        <firstblock>56</firstblock>
        <lastblock>57</lastblock>
      </rom>
    </ROM>

    <ROM id="MSX Kanji Driver with BASIC">
      <slotted> <ps>3</ps> <ss>1</ss> <page>1</page> </slotted>
      <slotted> <ps>3</ps> <ss>1</ss> <page>2</page> </slotted>
      <rom>
        <firstblock>58</firstblock>
        <lastblock>61</lastblock>
      </rom>
    </ROM>
    
    <FDC id="Memory Mapped FDC">
      <slotted> <ps>3</ps> <ss>2</ss> <page>1</page> </slotted>
      <slotted> <ps>3</ps> <ss>2</ss> <page>2</page> </slotted>
      <rom>
        <firstblock>48</firstblock>
        <lastblock>55</lastblock>
      </rom>
      <fdc_type>TC8566AF</fdc_type>
      <drives>1</drives>
    </FDC>

    <Kanji id="Kanji ROM">
      <io base="0xD8" num="4"/>
      <rom>
        <filename>roms/fs-a1gt_kanjifont.rom</filename>
      </rom>
    </Kanji>

    <S1990 id="S1990">
      <io base="0xE4" num="2"/>
    </S1990>

    <PPI id="ppi">
      <io base="0xA8" num="4"/>
      <volume>16000</volume>
      <key_ghosting>true</key_ghosting>
    </PPI>

    <VDP id="VDP">
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>V9958</version>
      <vram>128</vram>
    </VDP>

    <PSG id="psg">
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
      <volume>21000</volume>
      <keyboardlayout>JIS</keyboardlayout>
    </PSG>

    <RTC id="Real time clock">
      <io base="0xB4" num="2" type="O"/>
      <io base="0xB5" num="1" type="I"/>
      <sramname>fs-a1gt.cmos</sramname>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>
    
    <E6Timer id="Turbo-R timer">
      <io base="0xE6" num="2"/>
    </E6Timer>
    
    <F4Device id="F4Device">
      <io base="0xF4" num="1"/>
      <inverted>false</inverted>
    </F4Device>

    <TurboRLeds id="TurboRLeds">
      <io base="0xA7" num="1" type="O"/>
    </TurboRLeds>

    <TurboRPause id="TurboRPause">
      <io base="0xA7" num="1" type="I"/>
    </TurboRPause>

    <TurboRPCM id="PCM">
      <io base="0xA4" num="2"/>
      <volume>21000</volume>
    </TurboRPCM>

    <MSX-MIDI id="MSX-Midi">
      <io base="0xE8" num="8"/>
    </MSX-MIDI>

  </devices>

</msxconfig>
