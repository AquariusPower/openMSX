<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>BouKiChi/Reikan</manufacturer>
    <code>C-BIOS MSX1</code>
    <release_year>2003</release_year>
    <description>A fake MSX1 machine for C-BIOS</description>
    <type>MSX1</type>
  </info>

  <CassettePort/>

  <devices>

    <primary slot="0">
      <ROM id="C-BIOS Main ROM">
        <mem base="0x0000" size="0x8000"/>
        <rom>
          <sha1>2f9665ffc5ebd0ff2d9e3786ded75d4c30a2e935</sha1>
          <filename>../../Contrib/cbios/cbios.rom</filename>
        </rom>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3">
      <RAM id="Main RAM">
        <mem base="0x0000" size="0x10000"/>
        <slow_drain_on_reset>false</slow_drain_on_reset>
      </RAM>
    </primary>

    <PPI id="ppi">
      <io base="0xA8" num="4"/>
      <sound>
        <volume>16000</volume>
      </sound>
      <key_ghosting>true</key_ghosting>
    </PPI>

    <VDP id="VDP">
      <io base="0x98" num="2" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>TMS99X8A</version>
      <vram>16</vram>
    </VDP>

    <PSG id="PSG">
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
      <sound>
        <volume>21000</volume>
      </sound>
    </PSG>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

  </devices>

</msxconfig>
