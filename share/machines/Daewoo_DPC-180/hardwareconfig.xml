<?xml version="1.0" ?>
<!-- $Id$ -->
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Daewoo</manufacturer>
    <code>DPC-180</code>
    <release_year>1984</release_year>
    <description/>
    <type>MSX</type>
  </info>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
    </PPI>

    <VDP id="VDP">
      <version>TMS99X8A</version>
      <io base="0x98" num="2"/>
    </VDP>

    <PSG id="PSG">
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
    </PSG>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <primary slot="0">
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>roms/dpc-180_basic-bios1.rom</filename>
          <sha1>171b587bd5a947a13f3114120b6e7baca3b57d78</sha1>
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
      <ROM id="MSX Hangul Driver">
        <rom>
          <filename>roms/dpc-180_hangul.rom</filename>
          <sha1>4421fa2504cbce18f7c84b5ea97f04e017007f07</sha1>
        </rom>
        <mem base="0x8000" size="0x4000"/>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary slot="2">
      <RAM id="Main RAM">
        <slow_drain_on_reset>false</slow_drain_on_reset>
        <mem base="0x8000" size="0x8000"/>
      </RAM>
    </primary>

    <primary external="true" slot="3"/>

  </devices>

</msxconfig>
