<?xml version="1.0" ?>
<!-- $Id: hardwareconfig.xml,v 1.1 2003/03/24 22:27:44 m9710797 Exp $ -->
<!-- missing required hardware: SFG-05 -->
<!-- THere is also a /64 model, with a 64 kB mapper -->
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>Yamaha</manufacturer>
    <code>CX5MII/128</code>
    <release_year>?</release_year>
    <description/>
    <type>MSX</type>
  </info>

  <MapperReadBackBits>largest</MapperReadBackBits>

  <CassettePort/>

  <devices>

    <PPI id="ppi">
      <key_ghosting>true</key_ghosting>
      <sound>
        <volume>16000</volume>
      </sound>
      <io base="0xA8" num="4"/>
    </PPI>

    <VDP id="vdp">
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>V9938</version>
      <vram>16</vram>
    </VDP>

    <PSG id="PSG">
      <type>YM2149</type> <!-- in S-3527 MSX-ENGINE -->    
      <sound>
        <volume>21000</volume>
      </sound>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
    </PSG>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <primary slot="0">
      <ROM id="MSX BIOS with BASIC ROM">
        <rom>
          <filename>roms/cx5mii-128_basic-bios1.rom</filename>
        </rom>
        <mem base="0x0000" size="0x8000"/>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary external="true" slot="2"/>

    <primary slot="3">

      <secondary slot="0">
        <ROM id="CX5MII MSX sub ROM">
          <rom>
            <filename>roms/cx5mii-128_sub.rom</filename>
          </rom>
          <mem base="0x4000" size="0x4000"/>
        </ROM>
      </secondary>

      <secondary slot="1">
        <ROM id="FM Voicing Program II">
          <rom>
            <filename>roms/cx5mii-128_fmvoicingprogramii.rom</filename>
          </rom>
          <mem base="0x4000" size="0x4000"/>
        </ROM>
      </secondary>

      <secondary slot="2">
        <MemoryMapper id="Main RAM">
          <size>128</size>
          <mem base="0x0000" size="0x10000"/>
        </MemoryMapper>
      </secondary>

      <secondary slot="3">
        <YamahaSFG id="Yamaha SFG-05">
          <mem base="0x0000" size="0x8000"/>
          <sound>
            <volume>13000</volume>
          </sound>
          <rom>
            <filename>roms/sfg-05.rom</filename>
          </rom>
        </YamahaSFG>
      </secondary>

    </primary>

  </devices>

</msxconfig>
