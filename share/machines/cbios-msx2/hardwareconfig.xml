<?xml version="1.0" ?>
<!-- $Id$ --><!DOCTYPE msxconfig
  SYSTEM 'msxconfig.dtd'>
<msxconfig>

  <config id="ExternalSlots">
    <slota>1-0</slota>
    <slotb>2-0</slotb>
  </config>

  <config id="MotherBoard">
    <slot expanded="false" num="0"/>
    <slot expanded="false" num="1"/>
    <slot expanded="false" num="2"/>
    <slot expanded="true" num="3"/>
  </config>

  <config id="MapperType">
    <type>Philips</type>
  </config>

  <device id="Main RAM">
    <type>MemoryMapper</type>
    <slow_drain_on_reset>false</slow_drain_on_reset>
    <size>512</size>
    <slotted> <ps>3</ps> <ss>2</ss> <page>0</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>1</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>2</page> </slotted>
    <slotted> <ps>3</ps> <ss>2</ss> <page>3</page> </slotted>
    <slow_drain_on_reset>false</slow_drain_on_reset>
  </device>

  <device id="C-BIOS main">
    <type>ROM</type>
    <slotted> <ps>0</ps> <ss>0</ss> <page>0</page> </slotted>
    <filename>../../../Contrib/cbios/CB_MAIN.BIN</filename>
  </device>

  <device id="C-BIOS second half">
    <type>ROM</type>
    <slotted> <ps>0</ps> <ss>0</ss> <page>1</page> </slotted>
    <filename>../../../Contrib/cbios/CB_SH.BIN</filename>
  </device>

  <device id="C-BIOS subrom">
    <type>ROM</type>
    <slotted> <ps>3</ps> <ss>0</ss> <page>0</page> </slotted>
    <filename>../../../Contrib/cbios/CB_SUB.BIN</filename>
  </device>

  <device id="ppi">
    <type>PPI</type>
    <volume>16000</volume>
    <key_ghosting>true</key_ghosting>
  <io base="0xa8" num="4"/></device>

  <device id="VDP">
    <type>VDP</type>
    <version>V9938</version>
    <vram>128</vram>
  <io base="0x98" num="4" type="O"/><io base="0x98" num="2" type="I"/></device>

  <device id="Real time clock">
    <type>RTC</type>
    
    <sramname>cbios-msx2.cmos</sramname>
  <io base="0xb4" num="2" type="O"/><io base="0xb5" num="1" type="I"/></device>

  <device id="PSG">
    <type>PSG</type>
    <volume>21000</volume>
  <io base="0xa0" num="2" type="O"/><io base="0xa2" num="1" type="I"/></device>

  

  <device id="Printer Port">
    <type>PrinterPort</type>
  <io base="0x90" num="2"/></device>

  <config id="CassettePort">
  </config>

</msxconfig>