<?xml version="1.0" ?>
<!-- $Id$ -->
<!DOCTYPE msxconfig SYSTEM 'msxconfig2.dtd'>
<msxconfig>

  <info>
    <manufacturer>openMSX Team</manufacturer>
    <code>Boosted MSX2 EN</code>
    <release_year>2004</release_year>
    <description>A super-charged Philips NMS 8250</description>
    <type>MSX2</type>
  </info>

  <MapperReadBackBits>largest</MapperReadBackBits>

  <CassettePort/>

  <devices>

    <primary slot="0">
      <ROM id="MSX BIOS with BASIC ROM">
        <mem base="0x0000" size="0x8000"/>
        <rom>
          <sha1>6103b39f1e38d1aa2d84b1c3219c44f1abb5436e</sha1>
          <filename>roms/nms8250_basic-bios2.rom</filename>
        </rom>
      </ROM>
    </primary>

    <primary external="true" slot="1"/>

    <primary slot="3">

      <secondary slot="0">
        <ROM id="MSX Sub ROM">
          <mem base="0x0000" size="0x4000"/>
          <rom>
            <sha1>5c1f9c7fb655e43d38e5dd1fcc6b942b2ff68b02</sha1>
            <filename>roms/nms8250_msx2sub.rom</filename>
          </rom>
        </ROM>
      </secondary>

      <secondary slot="2">
        <MemoryMapper id="Main RAM">
          <mem base="0x0000" size="0x10000"/>
          <size>2048</size>
        </MemoryMapper>
      </secondary>

      <secondary slot="3">
        <WD2793 id="Memory Mapped FDC">
          <mem base="0x4000" size="0x8000"/>
          <broken_fdc_read>false</broken_fdc_read>
          <rom>
            <sha1>c3efedda7ab947a06d9345f7b8261076fa7ceeef</sha1>
            <filename>roms/nms8250_disk.rom</filename>
          </rom>
          <drives>2</drives>
        </WD2793>
      </secondary>

    </primary>

    <PPI id="ppi">
      <io base="0xA8" num="4"/>
      <sound>
        <volume>16000</volume>
      </sound>
      <key_ghosting>true</key_ghosting>
    </PPI>

    <VDP id="VDP">
      <io base="0x98" num="4" type="O"/>
      <io base="0x98" num="2" type="I"/>
      <version>V9958</version>
      <vram>192</vram>
    </VDP>

    <PSG id="PSG">
      <type>YM2149</type>
      <io base="0xA0" num="2" type="O"/>
      <io base="0xA2" num="1" type="I"/>
      <sound>
        <volume>21000</volume>
      </sound>
    </PSG>

    <RTC id="Real time clock">
      <io base="0xB4" num="2" type="O"/>
      <io base="0xB5" num="1" type="I"/>
      <sramname>Boosted_MSX2_EN.cmos</sramname>
    </RTC>

    <PrinterPort id="Printer Port">
      <io base="0x90" num="2"/>
    </PrinterPort>

    <primary slot="3">

      <secondary slot="1">
        <FMPAC id="PanaSoft SW-M004 FMPAC">
          <io base="0x7C" num="2" type="O"/>
          <mem base="0x4000" size="0x4000"/>
          <sound>
            <volume>13000</volume>
            <mode>left</mode>
          </sound>
          <rom>
            <sha1>9d789166e3caf28e4742fe933d962e99618c633d</sha1>
            <filename>roms/fmpac.rom</filename>
          </rom>
          <sramname>fmpac.pac</sramname>
        </FMPAC>
      </secondary>

    </primary>

    <MSX-AUDIO id="Generic MSX-Audio">
      <io base="0xC0" num="2"/>
      <io base="0x0A" num="1" type="O"/>
      <type>Philips</type>
      <sound>
        <volume>12000</volume>
        <mode>right</mode>
      </sound>
      <sampleram>256</sampleram>
    </MSX-AUDIO>

    <MusicModuleMIDI id="Generic MSX-Audio-MIDI">
      <io base="0x00" num="2" type="O"/>
      <io base="0x04" num="2" type="I"/>
    </MusicModuleMIDI>

    <MoonSound id="Sunrise MoonSound">
      <io base="0x7e" num="2"/>
      <io base="0xc4" num="4"/>
      <rom>
        <sha1>32760893ce06dbe3930627755ba065cc3d8ec6ca</sha1>
        <filename>roms/yrw801.rom</filename>
      </rom>
      <sound>
        <volume>12000</volume>
      </sound>
      <sampleram>640</sampleram>
    </MoonSound>

    <V9990 id="Sunrise GFX9000">
      <io base="0x60" num="0x10"/>
    </V9990>

    <primary slot="2">

      <secondary slot="0">
        <SCCplus id="Konami SCC+ Cartridge with expanded RAM">
          <mem base="0x4000" size="0x8000"/>
          <subtype>expanded</subtype>
          <sound>
            <volume>13000</volume>
          </sound>
        </SCCplus>
      </secondary>

      <secondary external="true" slot="1"/>

      <secondary slot="2">
        <MegaRam id="MegaRam">
          <io base="0x8e" num="1"/>
          <mem base="0x0000" size="0x10000"/>
          <size>512</size>
        </MegaRam>
      </secondary>

      <secondary external="true" slot="3"/>

    </primary>

  </devices>

</msxconfig>
